<h1>Editing Book</h1>
<!-- フォームやボタンの位置を直す -->
<%= form_for(@book) do |f| %>
<h5>Title</h5>
<%= f.text_field :title %>

<h5>Body</h5>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>
<!-- リンクを押下後、Showページに緑の字でBook　Was　successfully～のコメントを出す-->
<% end %>

<p><%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', books_path %></p>