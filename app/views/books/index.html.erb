<h1>Books</h1>
<!-- 表には内容をeachで繰り返しで表示させる -->
<table class="books">
	<tr>
		<th class="th-title">Title</th>
		<th class="th-body">body</th>
		<th class="th-link"></th>
		<th class="th-link"></th>
		<th class="th-link"></th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to 'Show', book_path(book) %></td>
		<td><%= link_to 'Edit', edit_book_path(book) %></td>
		<td><%= link_to 'Destroy', book_path(book), method: :delete %></td>
		<!-- リンクを押下後、注意のポップを出す。OK後、このページに緑の字でBook　Was　successfully～のコメントを出す-->
	</tr>
	<% end %>

</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
<h5>Title</h5>
<%= f.text_field :title %>

<h5>Body</h5>
<%= f.text_area :body %>
<!-- フォームやボタンの位置を直す -->
<%= f.submit 'Create　Book' %>
<!-- ボタンを押下、Showページに緑の字でBook　Was　successfully～のコメントを出す-->
<% end %>

<p><%= link_to 'Topページへ', root_path %></p>