<h1>Books</h1>
<!-- 表には内容をeachで繰り返しで表示させる -->
<table class="books">
	<tr>
		<th class="th-title">Title</th>
		<th class="th-body">body</th>
		<th class="th-link"></th>
		<th class="th-link"></th>
		<th class="th-link"></th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to 'Show', book_path(book) %></td>
		<td>編集</td>
		<td>削除</td>
	</tr>
	<% end %>

</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
<h5>Title</h5>
<%= f.text_field :title %>

<h5>Body</h5>
<%= f.text_area :body %>

<%= f.submit 'Create　Book' %>
<% end %>