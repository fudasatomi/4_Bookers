<!-- サクセスメッセージの表示 -->
<% if flash[:notice] %>
<span class="message"><%= notice %></span>
<% end %>
<!-- サクセスメッセージ -->

<div class="index">
<h1>Books</h1>

<table class="books">
	<tr>
		<th class="th-title">Title</th>
		<th class="th-body">body</th>
		<th class="th-link"></th>
		<th class="th-link"></th>
		<th class="th-link"></th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td class="td-link"><%= link_to 'Show', book_path(book),:style =>"color:black" %></td>
		<td class="td-link"><%= link_to 'Edit', edit_book_path(book),:style =>"color:black"  %></td>
		<td class="td-link"><%= link_to 'Destroy', book_path(book),:style =>"color:black", method: :delete,data: {confirm: "Are you sure?"} %></td>

	</tr>
	<% end %>

</table>

<h2>New book</h2>
<!-- エラーメッセージを表示 -->
<% if @book.errors.any? %>
<div id="error_explanation">
	<h4><%= @book.errors.count %>件のエラーがあります。</h4>
	　<ul>
		<% @book.errors.full_messages.each do |massage| %>
		<li><%= massage %></li>
		<% end %>
	</ul>
</div>
<% end %>
<!-- エラーメッセージ -->

<%= form_for(@book) do |f| %>
<h5>Title</h5>
<%= f.text_field :title %>

<h5>Body</h5>
<%= f.text_area :body %>
<div class="submit"><%= f.submit 'Create Book' %></div>

<% end %>